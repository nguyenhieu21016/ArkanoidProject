<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- THÔNG TIN CƠ BẢN VỀ PROJECT -->
    <groupId>com.nguyenhieu21016</groupId>
    <artifactId>ArkanoidProject</artifactId>
    <version>1.0-SNAPSHOT</version>

    <!-- CẤU HÌNH CÁC THUỘC TÍNH CHUNG -->
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <javafx.version>21.0.2</javafx.version>
    </properties>

    <!-- CÁC THƯ VIỆN BÊN NGOÀI (DEPENDENCIES) -->
    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
        </dependency>
    </dependencies>

    <!-- CÁCH MAVEN SẼ BUILD VÀ CHẠY PROJECT -->
    <build>
        <plugins>
            <!-- Plugin để biên dịch code Java -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>

            <!-- Plugin để chạy ứng dụng JavaFX một cách dễ dàng -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <!-- SỬA LẠI TÊN LỚP MAIN CHO ĐÚNG VỚI PACKAGE 'core' -->
                    <mainClass>core.Core</mainClass>

                    <!-- THÊM PHẦN NÀY ĐỂ FIX LỖI MODULE KHI CHẠY -->
                    <options>
                        <option>-Djava.awt.headless=true</option>
                        <option>-Dprism.order=sw</option>

                        <option>--add-modules</option>
                        <option>javafx.controls,javafx.fxml</option>
                    </options>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
